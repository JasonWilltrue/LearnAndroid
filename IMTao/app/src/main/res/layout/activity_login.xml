<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!--头部-->
    <RelativeLayout
        android:id="@+id/layout_login_header"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#008cc9">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/login_close"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登陆"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:textSize="30sp"
            android:textColor="#fff"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <!--用户名编辑框-->
    <RelativeLayout
        android:id="@+id/layout_login_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_login_header"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <EditText
            android:id="@+id/edit_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入登陆用户名/邮箱/手机号"
            android:textSize="24dp"
            android:background="@null"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/edit_username"
            android:background="#ccc"
            />
        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:hint="请输入密码"
            android:textSize="24sp"
            android:inputType="textPassword"
            android:background="@null"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/edit_password"
            android:background="#ccc"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_login"
        android:layout_below="@+id/layout_login_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:background="#008cc9"
        android:textColor="#fff"
        android:text="登陆"/>
     <RelativeLayout
         android:layout_below="@+id/btn_login"
         android:layout_width="wrap_content"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="10dp"
         android:layout_marginRight="10dp"
         android:layout_height="wrap_content">
         <TextView
             android:id="@+id/btn_findpwd"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="16sp"
             android:text="找回密码"/>
         <TextView
             android:id="@+id/btn_register"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:textSize="16sp"
             android:text="免费注册"/>
     </RelativeLayout>
</RelativeLayout>